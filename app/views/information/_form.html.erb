<%= form_with(model: information) do |form| %>
  <% if information.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(information.errors.count, "error") %> prohibited this information from being saved:</h2>

      <ul>
        <% information.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br><br>
  <div class="mb-3">
  <div>
    <%= form.label :first_name, style: "display: block", class:"form-label", style:"font-weight: bold;" %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div>
    <%= form.label :last_name, style: "display: block", class:"form-label", style:"font-weight: bold;" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block", class:"form-label", style:"font-weight: bold;" %>
    <%= form.text_field :email, class:"form-control", placeholder:"example@mail.com" %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block", class:"form-label", style:"font-weight: bold;" %>
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone" %>
  </div>

  <div>
    <%= form.label :age, style: "display: block", class:"form-label", style:"font-weight: bold;" %>
    <%= form.number_field :age, class:"form-control", placeholder:"Age" %>
  </div>

  <div>
    <% form.label :user_id, style: "display: block", class:"form-label", style:"font-weight: bold;" %>
    <%= form.number_field :user_id, id: :information_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>
  <br>

  <div class="d-grid gap-2 col-6 mx-auto">
    <%= form.submit class:'btn btn-primary' %>
  </div>
<% end %>
</div>